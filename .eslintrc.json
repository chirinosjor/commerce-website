{
  "extends": [
    "prettier",
    "next/core-web-vitals",
    "plugin:prettier/recommended",
    "eslint:recommended", "plugin:react/recommended",
    "plugin:css/standard"
  ],
  "plugins": ["prettier", "react", "react-hooks", "css", "plugin:css/recommended"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "all"
      }
    ],
    "indent": ["error", 2]
  }
}
