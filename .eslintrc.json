{
  "extends": [
    "prettier",
    "next/core-web-vitals",
    "plugin:prettier/recommended",
    "eslint:recommended", "plugin:react/recommended"
  ],
  "plugins": ["prettier", "react", "react-hooks"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "all"
      }
    ],
    "indent": ["error", 2],
    "@next/next/no-img-element": "off"
  }
}
